<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="16dp"
    app:cardCornerRadius="15dp"
    tools:context=".JournalSlide5">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/mealNb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway"
            android:textStyle="bold"
            android:gravity="center"
            android:text="@string/nbMealsTxt"
            android:textColor="?attr/colorPrimary"
            android:textSize="25dp"
            android:layout_margin="10dp"/>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/radioGroupJournalSlide">

            <RadioButton
                android:id="@+id/radioBtn1_slide"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:buttonTint="?attr/colorAccent"
                android:fontFamily="@font/raleway"
                android:text="1 meal"
                android:textColor="?attr/colorPrimary"
                android:textSize="20dp"
                android:textStyle="bold" />
            <RadioButton
                android:id="@+id/radioBtn2_slide"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="2 meals"
                android:buttonTint="?attr/colorAccent"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="?attr/colorPrimary"/>
            <RadioButton
                android:id="@+id/radioBtn3_slide"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:buttonTint="?attr/colorAccent"
                android:text="3 meals!"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="?attr/colorPrimary"/>
            <RadioButton
                android:id="@+id/radioBtnSnacks_slide"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:buttonTint="?attr/colorAccent"
                android:text="Only snacks"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="?attr/colorPrimary"/>
        </RadioGroup>
    </LinearLayout>


</androidx.cardview.widget.CardView>