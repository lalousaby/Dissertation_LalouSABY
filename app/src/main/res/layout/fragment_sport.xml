<?xml version="1.0" encoding="utf-8"?>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/foodFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Journaling"
        android:paddingBottom="100dp">

        <TextView
            android:id="@+id/title"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:fontFamily="@font/anton"
            android:text="Did you move your body today?"
            android:textAllCaps="true"
            android:textColor="?attr/colorPrimary"
            android:textSize="44dp" />
         <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:layout_column="0"
             android:layout_row="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_row="1"
            android:layout_column="0"
            android:paddingBottom="200dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="0">

                <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/walk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="10dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_weight="1"
                    app:cardElevation="5sp"
                    app:cardBackgroundColor="?attr/colorOnPrimary"
                    app:cardCornerRadius="15dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtWalk"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:fontFamily="@font/raleway"
                            android:textStyle="bold"
                            android:text="Go on a 15 minutes walk around Hanley Park"
                            android:textColor="?attr/colorAccent"
                            android:textSize="25dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/gymCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="10dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_weight="1"
                    app:cardElevation="5sp"
                    app:cardBackgroundColor="?attr/colorOnPrimary"
                    app:cardCornerRadius="15dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway"
                            android:textStyle="bold"
                            android:text="Register to Staffs' Gym"
                            android:textAlignment="center"
                            android:textColor="?attr/colorAccent"
                            android:textSize="25dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="0">

                <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/socialSport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="10dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_weight="1"
                    app:cardElevation="5sp"
                    app:cardBackgroundColor="?attr/colorOnPrimary"
                    app:cardCornerRadius="15dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="Learn more about social sports at Staffs"
                            android:textColor="?attr/colorAccent"
                            android:textSize="25dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/yogaCard"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="10dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_weight="1"
                    app:cardElevation="5sp"
                    app:cardBackgroundColor="?attr/colorOnPrimary"
                    app:cardCornerRadius="15dp"
                    >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:text="Link to a 12 minutes yoga youtube video"
                            android:textColor="?attr/colorAccent"
                            android:textSize="25dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>


                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


                <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/compTeams"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_margin="10dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_weight="1"
                    app:cardElevation="5sp"
                    app:cardBackgroundColor="?attr/colorOnPrimary"
                    app:cardCornerRadius="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"

                        android:fontFamily="@font/raleway"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:text="Discover the competitive sports teams at Staffs"
                        android:textColor="?attr/colorAccent"
                        android:textSize="25dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"/>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>
    </ScrollView>
    </GridLayout>


