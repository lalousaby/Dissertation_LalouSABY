<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:id="@+id/findFoodFrag"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".findFood"
       >

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anton"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/findFoodTxt"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="?attr/colorPrimary"
        android:textSize="44sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="30dp"
                android:layout_row="1"
                android:layout_column="0"
                android:paddingBottom="120dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="0">

                    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/SUSLeekRoad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="10dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_weight="1"
                        app:cardElevation="5sp"
                        app:cardBackgroundColor="?attr/colorOnPrimary"
                        app:cardCornerRadius="15dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:fontFamily="@font/raleway"
                                android:textStyle="bold"
                                android:text="Student Union Shop, Leek Road"
                                android:textColor="?attr/colorAccent"
                                android:textSize="25dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"/>


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/SUSCollegeRoad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="10dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_weight="1"
                        app:cardElevation="5sp"
                        app:cardBackgroundColor="?attr/colorOnPrimary"
                        app:cardCornerRadius="15dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway"
                                android:textStyle="bold"
                                android:text="Student Union Shop, College Road"
                                android:textAlignment="center"
                                android:textColor="?attr/colorAccent"
                                android:textSize="25dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"/>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/anton"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="around campus"
                    android:textAlignment="center"
                    android:textAllCaps="true"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_row="1"
                    android:layout_column="0">

                    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/aldi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="10dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_weight="1"
                        app:cardElevation="5sp"
                        app:cardBackgroundColor="?attr/colorOnPrimary"
                        app:cardCornerRadius="15dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txtAldi"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAlignment="center"
                                android:fontFamily="@font/raleway"
                                android:textStyle="bold"
                                android:text="ALDI, Victoria Road"
                                android:textColor="?attr/colorAccent"
                                android:textSize="25dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"/>


                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/lidl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_margin="10dp"
                        android:layout_row="0"
                        android:layout_column="0"
                        android:layout_weight="1"
                        app:cardElevation="5sp"
                        app:cardBackgroundColor="?attr/colorOnPrimary"
                        app:cardCornerRadius="15dp"
                        >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/raleway"
                                android:textStyle="bold"
                                android:text="Lidl, London Road"
                                android:textAlignment="center"
                                android:textColor="?attr/colorAccent"
                                android:textSize="25dp"
                                android:layout_margin="10dp"
                                android:layout_weight="1"/>

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

    </ScrollView>

    </LinearLayout>

