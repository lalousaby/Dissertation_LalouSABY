<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/foodFrag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:paddingBottom="100dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/anton"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/showEat"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:textAllCaps="true"
        android:textColor="?attr/colorPrimary"
        android:textSize="44dp" />

    <Button
        android:id="@+id/findFood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="?attr/colorAccent"
        android:textAlignment="center"
        android:text="@string/findFoodTxt"
        android:fontFamily="@font/raleway"
        android:textSize="14dp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_margin="20dp"
                android:layout_marginTop="60dp"
                android:layout_row="1"
                android:layout_column="0"
                app:cardElevation="5sp"
                app:cardBackgroundColor="?attr/colorOnPrimary"
                app:cardCornerRadius="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_margin="5dp">
                        <TextView
                            android:id="@+id/txtBreakfast"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway"
                            android:textStyle="bold"
                            android:text="Breakfast"
                            android:textColor="?attr/colorAccent"
                            android:textSize="25dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>
                        <ImageButton
                            android:id="@+id/btnImageB"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:backgroundTint="?attr/colorAccent"
                            android:src="@drawable/gallery"
                            android:fontFamily="@font/raleway"
                            android:layout_marginRight="10dp"
                            />
                        <ImageButton
                            android:id="@+id/btnPhotoB"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:src="@drawable/photo"
                            android:backgroundTint="?attr/colorAccent"
                            android:fontFamily="@font/raleway"
                            android:layout_marginRight="10dp"
                            />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/editBreakfastTxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="12"
                        android:inputType="text"
                        android:textColor="?attr/colorAccent"
                        android:textSize="25dp"
                        android:layout_margin="10dp" />
                    <ImageView
                        android:id="@+id/breakfastImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="centerCrop"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_margin="20dp"
                app:cardElevation="5sp"
                android:layout_row="2"
                android:layout_column="0"
                app:cardBackgroundColor="?attr/colorOnPrimary"
                app:cardCornerRadius="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        android:layout_margin="5dp">
                        <TextView
                            android:id="@+id/txtLunch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway"
                            android:textStyle="bold"
                            android:text="@string/lunch"
                            android:textColor="?attr/colorAccent"
                            android:textSize="25dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>
                        <ImageButton
                            android:id="@+id/btnImageL"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:backgroundTint="?attr/colorAccent"
                            android:src="@drawable/gallery"
                            android:fontFamily="@font/raleway"
                            android:layout_marginRight="10dp"
                            />
                        <ImageButton
                            android:id="@+id/btnPhotoL"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:src="@drawable/photo"
                            android:backgroundTint="?attr/colorAccent"
                            android:fontFamily="@font/raleway"
                            android:layout_marginRight="10dp"
                            />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/editLunchTxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="12"
                        android:inputType="text"
                        android:textColor="?attr/colorAccent"
                        android:textSize="25dp"
                        android:layout_margin="10dp" />
                    <ImageView
                        android:id="@+id/lunchImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_margin="20dp"
                app:cardElevation="5sp"
                android:layout_row="3"
                android:layout_column="0"
                app:cardBackgroundColor="?attr/colorOnPrimary"
                app:cardCornerRadius="15dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="right"
                        android:layout_margin="5dp">
                        <TextView
                            android:id="@+id/txtDiner"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/raleway"
                            android:textStyle="bold"
                            android:text="@string/diner"
                            android:textColor="?attr/colorAccent"
                            android:textSize="25dp"
                            android:layout_margin="10dp"
                            android:layout_weight="1"/>
                        <ImageButton
                            android:id="@+id/btnImageD"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:backgroundTint="?attr/colorAccent"
                            android:src="@drawable/gallery"
                            android:fontFamily="@font/raleway"
                            android:layout_marginRight="10dp"
                            />
                        <ImageButton
                            android:id="@+id/btnPhotoD"
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:layout_gravity="right"
                            android:src="@drawable/photo"
                            android:backgroundTint="?attr/colorAccent"
                            android:fontFamily="@font/raleway"
                            android:layout_marginRight="10dp"
                            />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/editDinerTxt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:ems="12"
                        android:inputType="text"
                        android:textColor="?attr/colorAccent"
                        android:textSize="25dp"
                        android:layout_margin="10dp" />
                    <ImageView
                        android:id="@+id/dinerImg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <Button
                android:id="@+id/submitFood"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:text="@string/submit"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:backgroundTint="?attr/colorAccent"
                android:layout_gravity="center"
                />
        </LinearLayout>

    </ScrollView>

</LinearLayout>


