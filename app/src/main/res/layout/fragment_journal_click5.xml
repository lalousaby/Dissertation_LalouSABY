<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/journalClick2Frag"
    tools:context=".Journal_click2">

    <TextView
        android:id="@+id/title"
        android:paddingTop="65dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:fontFamily="@font/raleway"
        android:textStyle="bold"
        android:text="@string/FAB_journaling"
        android:textAllCaps="true"
        android:shadowColor="?attr/colorAccent"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:textColor="?attr/colorOnPrimary"
        android:layout_margin="5sp"
        android:textSize="60dp" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardElevation="10dp"
        android:layout_row="5"
        android:layout_column="0"
        app:cardBackgroundColor="?attr/colorOnPrimary"
        app:cardCornerRadius="15dp"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/mealNb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textStyle="bold"
                android:gravity="center"
                android:text="@string/nbMealsTxt"
                android:textColor="?attr/colorPrimary"
                android:textSize="25dp"
                android:layout_margin="10dp"/>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/radioGroupJournalClick">

                <RadioButton
                    android:id="@+id/radioBtn1_click"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:buttonTint="?attr/colorAccent"
                    android:fontFamily="@font/raleway"
                    android:text="1 meal"
                    android:textColor="?attr/colorPrimary"
                    android:textSize="20dp"
                    android:textStyle="bold" />
                <RadioButton
                    android:id="@+id/radioBtn2_click"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:text="2 meals"
                    android:buttonTint="?attr/colorAccent"
                    android:fontFamily="@font/raleway"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="?attr/colorPrimary"/>
                <RadioButton
                    android:id="@+id/radioBtn3_click"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:buttonTint="?attr/colorAccent"
                    android:text="3 meals!"
                    android:fontFamily="@font/raleway"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="?attr/colorPrimary"/>
                <RadioButton
                    android:id="@+id/radioBtnSnacks_click"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:buttonTint="?attr/colorAccent"
                    android:text="Only snacks"
                    android:fontFamily="@font/raleway"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="?attr/colorPrimary"/>
            </RadioGroup>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="left">

            <ImageButton
                android:id="@+id/LArrowClick5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/round_btn"
                android:scaleType="fitXY"
                android:layout_marginLeft="20dp"
                android:elevation="2dp"
                android:src="@drawable/arrow_left_yellow"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="right">

            <ImageButton
                android:id="@+id/RArrowClick5"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/round_btn"
                android:scaleType="fitXY"
                android:layout_marginRight="20dp"
                android:elevation="2dp"
                android:src="@drawable/arrow_right_yellow"
                />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>

